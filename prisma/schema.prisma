datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // usa arquivo local apenas para validação
}

generator client {
  provider = "prisma-client-js"
}

model GuestConfirmation {
  id         Int      @id @default(autoincrement())
  name       String
  email      String?
  phone      String?
  isChildren Boolean  @default(false)
  createdAt  DateTime @default(now())
  guestId    Int
  guest      Guest    @relation(fields: [guestId], references: [id])
  inviteSent Boolean  @default(false)
}

model Guest {
  id                Int                 @id @default(autoincrement())
  name              String
  email             String?
  phone             String?
  goToWedding       Boolean             @default(true)
  goToParty         Boolean             @default(true)
  observations      String?
  createdAt         DateTime            @default(now())
  inviteSent        Boolean             @default(false)
  GuestConfirmation GuestConfirmation[]
}

model InviteCode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}
